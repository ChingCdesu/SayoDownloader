{
  "name": "downloader",
  "version": "0.1.8",
  "main": "dist/main/index.js",
  "author": "_ChingC",
  "license": "MIT",
  "scripts": {
    "dev": "npm run dev:all",
    "dev:all": "concurrently -n=vue,ele -c=green,blue \"npm run dev:vue\" \"npm run dev:ele\"",
    "dev:vue": "vite",
    "dev:ele": "node -r ts-node/register script/build-main --env=development --watch",
    "build:vue": "vite build",
    "build:ele": "node -r ts-node/register script/build-main --env=production && electron-builder",
    "build": "rimraf dist && npm run build:vue && npm run build:ele"
  },
  "build": {
    "appId": "cn.sayobot.downloader",
    "productName": "SayoDownloader",
    "asar": true,
    "protocols": [
      {
        "name": "sayo",
        "role": "Viewer",
        "schemes": ["sayo"]
      }
    ],
    "directories": {
      "output": "release/${version}"
    },
    "electronDownload": {
      "mirror": "https://npm.taobao.org/mirrors/electron/"
    },
    "files": [
      "!node_modules",
      "dist/**"
    ],
    "extraResources": {
      "from": "src/preload",
      "to": "app/src/preload"
    },
    "mac": {
      "artifactName": "${productName}_v${version}.Mac.${ext}",
      "target": [
        "zip"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_v${version}.WindowsInstaller.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "dependencies": {
    "@ant-design/icons-vue": "^6.0.1",
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/free-regular-svg-icons": "^5.15.3",
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "@fortawesome/vue-fontawesome": "^3.0.0-3",
    "vue": "next",
    "vue-router": "next"
  },
  "devDependencies": {
    "@cliqz/url-parser": "^1.1.4",
    "@element-plus/icons": "^0.0.11",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-typescript": "^8.2.1",
    "@types/howler": "^2.2.2",
    "@types/minimist": "^1.2.1",
    "@vitejs/plugin-vue": "^1.1.4",
    "@vitejs/plugin-vue-jsx": "^1.1.4",
    "@vue/compiler-sfc": "^3.0.7",
    "acorn": "^8.2.4",
    "axios": "^0.21.1",
    "chalk": "^4.1.0",
    "concurrently": "^5.3.0",
    "electron": "latest",
    "electron-builder": "latest",
    "electron-store": "^7.0.2",
    "element-plus": "latest",
    "howler": "^2.2.1",
    "less": "^4.1.1",
    "lodash": "^4.17.21",
    "minimist": "^1.2.5",
    "ora": "^5.0.0",
    "rimraf": "^3.0.2",
    "rollup-plugin-esbuild": "^3.0.2",
    "rollup-plugin-node-externals": "^2.2.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "vite": "^2.1.2"
  },
  "keywords": [
    "vite",
    "electron",
    "vue3",
    "rollup"
  ]
}
